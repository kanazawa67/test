package com.internousdev.ecsite.action;

import java.util.ArrayList;
import java.util.Map;
import java.sql.SQLException;
import org.apache.struts2.interceptor.SessionAware;
import com.opensymphony.xwork2.ActionSupport;
import com.internousdev.ecsite.dao.ShohinDAO;
import com.internousdev.ecsite.dto.ShohinDTO;


public class ShohinAction extends ActionSupport implements SessionAware{

	public Map<String,Object> session;
	private ShohinDAO shohinDAO=new ShohinDAO();
	private ArrayList<ShohinDTO> shohinList=new ArrayList<ShohinDTO>();

	String id=session.get("id").toString();
	String item_name=session.get("item_name").toString();

	shohinList=shohinDAO.getShohinInfo(id,item_price);

	String result=SUCCESS;

	return result;

	@Override
	public void setSession(Map<String, Object> session){
		this.session=session;
	}

	public ArrayList<ShohinDTO>getShohinList(){
		return this.shohinList;
	}
}
